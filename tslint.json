{
  "extends": [
  	"tslint:latest",
    "tslint-config-airbnb",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "jsRules":{},
  "rules": {
    "member-access": [true, "no-public"],
    "no-console": false,
  	"space-in-parens": [true, "always", { "exceptions": [ "empty" ] } ],
  	"semicolon": [ true, "always", "ignore-bound-class-methods" ],
    "no-unused-variable": [true, {"ignore-pattern": "^React", "severity": "warning"} ],
  	"variable-name": [ false, "ban-keywords", "check-format", "allow-leading-underscore"],
    "import-name": [ false, {
       "Express": "express" 
     } ],
    "object-literal-sort-keys": [false, "ignore-case", "match-declaration-order", "shorthand-first"],
    "jsx-a11y/href-no-hash": false,
    "no-var-requires": false,
    "no-string-literal": false,
    "space-within-parens": [true, 1],
    "jsx-no-lambda": false,
    "no-else-after-return": {
      "options": "allow-else-if"
    },
    "no-implicit-dependencies": [true, "dev"],
    "no-submodule-imports": [
      true, 
      "dev", 
      "react-router-dom",
      "react-apollo",
      "react-dom",
      "react-loadable"
    ]
  }
}