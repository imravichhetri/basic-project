  {
    "compilerOptions": {
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "strict": true,
      "noUnusedLocals": true,
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es6",
      "jsx": "react",
      "allowJs": true,
      "esModuleInterop": true ,
      "lib": [
        "es2017",
        "dom",
        "es6",
        "esnext",
        "es2015.core",
        "es2015.collection",
        "es2015.generator",
        "es2015.iterable",
        "es2015.promise",
        "es2015.proxy",
        "es2015.reflect",
        "es2015.symbol",
        "es2015.symbol.wellknown",
        "esnext.asynciterable"
      ],
      "types": [
        "apollo-client",
        "apollo-server-core",
        "body-parser",
        "express",
        "express-graphql",
        "express-serve-static-core",
        "express-session",
        "graphql",
        "http-proxy-middleware",
        "jsonwebtoken",
        "lodash",
        "react",
        "react-dom",
        "react-apollo",
        "react-loadable",
        "react-router",
        "webpack-env",
        "webpack-dev-middleware"
      ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
      "node_modules",
      "build",
      "scripts",
      "acceptance-tests",
      "webpack",
      "jest",
      "src/setupTests.ts"
    ],
    "tslint": {
      "args": ["--project", "${folder}"]
    }
  }