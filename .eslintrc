{
  "extends": [
    "plugin:react/recommended",
    "prettier/react"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "codeFrame": true,
    "ecmaFeatures": {
      "jsx": true,
      "legacyDecorators": true
    }
  },
  "rules": {
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/prop-types": [
      1
    ],
    "react/display-name": [
      2
    ],
    "react/jsx-uses-vars": 1,
    "space-within-parens": [
      0,
      "always",
      {
        "exceptions": [
          "empty"
        ]
      }
    ],
    "space-in-parens": [
      1,
      "always"
    ],
    "array-bracket-spacing": [
      "warn",
      "always"
    ],
    "semi": [
      1,
      "always"
    ],
    "space-before-function-paren": [
      "warn",
      {
        "anonymous": "always",
        "named": "always",
        "asyncArrow": "always"
      }
    ],
    "no-console": [
      0,
      {
        "allow": [
          "warn",
          "warn",
          "log"
        ]
      }
    ],
    "no-tabs": [
      1,
      {
        "allowIndentationTabs": true
      }
    ],
    "quotes": [
      1,
      "double",
      {
        "allowTemplateLiterals": true
      }
    ],
    "no-mixed-spaces-and-tabs": [
      0,
      "smart-tabs"
    ],
    "indent": [
      1,
      "tab",
      {
        "SwitchCase": 1,
        "ignoredNodes": [
          "JSX*",
          "JSXElement",
          "JSXElement > *",
          "JSXAttribute",
          "JSXIdentifier",
          "TemplateLiteral *",
          "JSXNamespacedName",
          "JSXMemberExpression",
          "JSXSpreadAttribute",
          "JSXExpressionContainer",
          "JSXOpeningElement",
          "JSXClosingElement",
          "JSXText",
          "JSXEmptyExpression",
          "JSXSpreadChild",
          "TemplateLiteral"
        ]
      }
    ],
    "react/jsx-indent": "off",
    "react/jsx-closing-bracket-location": [
      1,
      "props-aligned"
    ],
    "comma-dangle": [
      1,
      "never"
    ],
    "no-unused-vars": [
      1,
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": false
      }
    ]
  }
}